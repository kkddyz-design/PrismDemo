<Window x:Class="PrismDemo.Views.ObservableCollectionDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PrismDemo.Views"
        xmlns:prism="http://prismlibrary.com/"
        Title="ObservableCollection示例"
        Width="800"
        Height="450"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>

        <ListBox Width="300"
                 Height="150"
                 ItemsSource="{Binding DeviceList}"
                 SelectedItem="{Binding SelectedDevice, Mode=TwoWay}" />

        <!-- 新增按钮：绑定Prism的DelegateCommand -->
        <Button Width="100" Content="新增设备" Command="{Binding AddDeviceCommand}" />

        <!-- 删除按钮：无需CommandParameter，直接用ViewModel的SelectedDevice -->
        <Button Width="100" Content="删除选中" Command="{Binding RemoveDeviceCommand}" />
    </StackPanel>
</Window>
