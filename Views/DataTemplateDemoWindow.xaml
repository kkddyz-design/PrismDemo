<Window x:Class="PrismDemo.Views.DataTemplateDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        Title="DataTemplate示例"
        Width="400"
        Height="300"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <Window.Resources>
        <!-- 定义DataTemplate：每条Student数据的显示样式 -->
        <DataTemplate x:Key="StudentItemTemplate">
            <StackPanel Margin="5" Orientation="Horizontal">
                <!-- 头像 -->
                <Image Width="40"
                       Height="40"
                       Margin="0,0,10,0"
                       Source="{Binding Avatar}"
                       Stretch="UniformToFill" />
                <!-- 文字信息 -->
                <StackPanel>
                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" />
                    <TextBlock Text="{Binding Age, StringFormat='年龄：{0}'}" FontSize="12" Foreground="Gray" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <!-- ListBox绑定集合，并使用DataTemplate -->
    <ListBox Width="300"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             ItemsSource="{Binding Students}"
             ItemTemplate="{StaticResource StudentItemTemplate}" />
</Window>